<Window x:Class="SignalRWpfClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525" Closing="Window_Closing">
    <Grid>
        <StackPanel>
            <TextBlock>Username:</TextBlock>
            <TextBox Name="UsernameTextBox" />
            <TextBlock>Message to Send</TextBlock>
            <TextBox Name="ToSendTextBox" />
            <Button Name="SendButton" Click="SendButton_Click"><TextBlock>Send Message</TextBlock></Button>
            <RichTextBox Name="OutputRichTextBox" Height="500" />
        </StackPanel>
    </Grid>
</Window>
